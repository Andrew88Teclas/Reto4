<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/linearLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/fondodegradado2"
    android:orientation="vertical"
    tools:context=".ui.home.HomeFragment">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/logoinicio"
            android:layout_width="131dp"
            android:layout_height="131dp"
            android:layout_weight="0"
            android:padding="10dp"
            android:src="@drawable/comiditas" />

        <TextView
            android:id="@+id/textinicio"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:fontFamily="@font/fruzzybubbles"
            android:foregroundGravity="center_vertical"
            android:gravity="center"
            android:text="Comiditas.com"
            android:textColor="@color/black"
            android:textSize="34sp"
            android:textStyle="bold" />
    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/imageView3"
            android:layout_width="match_parent"
            android:layout_height="155dp"
            android:layout_weight="1"
            android:src="@drawable/combos1" />

        <TextView
            android:id="@+id/textView2"
            android:layout_width="wrap_content"
            android:layout_height="168dp"
            android:layout_weight="1"
            android:fontFamily="@font/fruzzybubbles"
            android:padding="10dp"
            android:text="Llevamos más de 5 años deleitando sus paladares con las mejores recetas aplicadas a la gastronomía popular. Hamburguesas, salchipapas, chorizos arepas rellenas, pinchos y muchos productos más, acompañados también con los mejores jugos naturales caseros. Visítenos para tener el gusto de atenderlos y satisfacerlos."
            android:textAlignment="textStart"
            android:textColor="@color/black"
            android:textSize="16sp"
            android:textStyle="bold|italic" />
    </LinearLayout>
</LinearLayout>